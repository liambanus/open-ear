{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "native-gnu-toolchain",
      "description": "Use native GNU toolchain.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "${sourceDir}/scripts/cmake/toolchains/native.cmake"
        }
      }
    },
    {
      "name": "aarch64-elinux-gnu-toolchain",
      "description": "Cross-compile for aarch64 using Linux GNU toolchain.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "${sourceDir}/scripts/cmake/toolchains/aarch64.cmake"
        }
      }
    },
    {
      "name": "build-type-rel",
      "description": "Release build type.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    },
    {
      "name": "build-type-dbg",
      "description": "Debug build type.",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    }
  ]
}
