{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "unit-tests-enabled",
      "description": "Configure with unit tests enabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_UNIT_TESTS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "unit-tests-disabled",
      "description": "Configure with unit tests disabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_UNIT_TESTS": {
          "type": "BOOL",
          "value": "OFF"
        }
      }
    },
    {
      "name": "jni-enabled",
      "description": "Configure with JNI library build enabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_JNI_LIB": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "jni-disabled",
      "description": "Configure with JNI library build disabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_JNI_LIB": {
          "type": "BOOL",
          "value": "OFF"
        }
      }
    },
    {
      "name": "build-shared-enabled",
      "description": "Configure with shared libraries enabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "build-shared-disabled",
      "description": "Configure with shared libraries disabled.",
      "hidden": true,
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
            "type": "BOOL",
            "value": "OFF"
        }
      }
    }
  ]
}
